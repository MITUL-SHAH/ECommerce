<!DOCTYPE html>
<html>
	<head>
		<meta charset="ISO-8859-1" />
		<title>Register to ScarletElectronics</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
			rel="stylesheet" />
		<link
			rel="stylesheet"
			type="text/css"
			href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.css" />
		<script
			src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"
			type="text/javascript"></script>
	</head>

	<body>
		<div id="errorMsg" class="col-md-3 align-self-center mx-auto text-danger"></div>

		<div>
			<!-- <br> <br> <br> -->
			<div>
				<ul class="nav">
					<li class="nav-item">
						<form action="/item-listing/listings" method="get">
							<button type="submit" class="btn btn-primary">
								Home
							</button>
						</form>
					</li>
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<li class="nav-item">
						<form action="/users/modify-user" method="get">
							<button type="submit" class="btn btn-primary">
								Edit
							</button>
						</form>
					</li>
				</ul>
			</div>

			<br />
			<br />
			<div id="name">
				<label for="name" class="form-label text-left" ></label>
			</div>
			<br />
			<div id="email">
				<label for="email" class="form-label text-left" ></label>
			</div>
			<br />
			<div id="phone">
				<label for="phone" class="form-label text-left" ></label>
			</div>
			<br />
			<div id="address1">
				<label for="address1" class="form-label text-left" ></label>
			</div>
			<br />
			<div id="address2">
				<label for="address2" class="form-label text-left" ></label>
			</div>
			<br />
			<div id="address_city">
				<label for="address_city" class="form-label text-left" ></label>
			</div>
			<br>
			<div id="address_state_code">
				<label for="address_state_code" class="form-label text-left" ></label>
			</div>
			<br>
			<div id="address_zipcode">
				<label for="address_zipcode" class="form-label text-left" ></label>
			</div>
			<p id="err_para" style="color: red"></p>
			<br />
		</div>
	</body>

    <script>
		//Fill the data on the website, on load of the page.
		document.addEventListener('DOMContentLoaded', function() {
            event.preventDefault();
			fetch('/users/')
			.then(response => response.json())
			.then(data => {
				if (data.success) {
					console.log(data.body);
					document.getElementById("name").innerHTML = data.body.name;
					document.getElementById("email").innerHTML = data.body.emailId;
					document.getElementById("phone").innerHTML = data.body.phone;
					document.getElementById("address1").innerHTML = data.body.address1;
					document.getElementById("address2").innerHTML = data.body.address2;
					document.getElementById("address_city").innerHTML = data.body.city;
					document.getElementById("address_state_code").innerHTML = data.body.state;
					document.getElementById("address_zipcode").innerHTML = data.body.zipcode;
				} else {
					window.location.href = data.redirectUrl;
				}
			})
			.catch(error => {
				document.getElementById('errorMsg').innerText = error.message || 'An unexpected error occurred.';
				console.error('Error:', error);
			});
		});
    </script>



</html>
