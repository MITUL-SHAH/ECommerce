<body>


    <div align="center">
        <br> <br>
        <h1 class="text-primary text-center mx-auto">Welcome to the ScarletElectronics</h1>
        <br> <br> <br>
        <h2 class="text-center">User Register Form</h2>
        <form id="reg" name="registration" method="POST" action="/users/registerUser" onSubmit="return formValidation();">
            <div class="col-md-3 align-self-center mx-auto">
                <label for="name" class="form-label text-left">Name</label> <input type="text"
                    class="form-control text-left" id="name" name="name" onchange="allLetter();" required>
            </div>
            <br>
            <div class="col-md-3 align-self-center mx-auto">
                <label for="pseudoName" class="form-label text-left">Pseudo
                    Name:</label> <input type="text" class="form-control text-left" id="pseudoName" name="pseudoName" required>
                <div id="emailHelp" class="form-text">This Name will be used
                    in Public Reports (Bidding History)</div>
            </div>
            <br>
            <div class="col-md-3 align-self-center mx-auto">
                <!-- <label for="emailId" class="form-label text-left">Email
                        address</label> <input type="email" class="form-control text-left"
                        id="emailId" aria-describedby="emailHelp" name="emailId"
                        onchange="validateEmail('a')" required> -->

                <label for="emailId" class="form-label">Email:</label> <input type="email" class="form-control"
                    id="emailId" name="emailId" name="email" placeholder="Enter Your Email" onchange="validateEmail();">
                <div id="emailHelp" class="form-text">We'll never share your
                    email with anyone else.</div>
            </div>
            <br>
            <div class="col-md-3 align-self-center mx-auto">
                <label for="password" class="form-label text-left">Password</label>
                <input type="password" class="form-control text-left" id="password" name="password"
                    onchange="passid_validation(7,12);" required>
                <p style="font-size: small;" class="form-text">Password should contains 7 to 12 characters, atleast one Capital letter, atleast one digit, atleast one special character</p>
            </div>
            <br>
            <div class="col-md-3 align-self-center mx-auto">
                <label for="cpassword" class="form-label text-left">Confirm
                    Password</label> <input type="password" class="form-control text-left" id="cpassword"
                    name="cpassword" onchange="cpassid_validation();" required>
            </div>
            <br>
            <div class="col-md-3 align-self-center mx-auto">
                <label for="address" class="form-label text-left">Address</label> <input type="text"
                    class="form-control text-left" id="address" name="address" required>
            </div>
            <br>
            <div class="col-md-3 align-self-center mx-auto">
                <label for="phoneNr" class="form-label">Contact Number :</label> <input type="text"
                    class="form-control text-left" id="phoneNr" name="phoneNr" onchange="phoneNumberCheck();" required>
            </div>
            <br> <br>
            <p id="err_para" style="color: red;"></p><br>
            <div class="col-md-3 text-center mx-auto">
                <button type="submit" id = "submit_button"class="btn btn-primary align-self-center" >Submit</button>
            </div>
        </form>
    </div>
    </form>
    </div>


    <script>
        function phoneNumberCheck()
        {
           var validator =  /^\d{10}$/;
           var phone_num = document.getElementById("phoneNr").value;

           if(!validator.test(phone_num))
           {
                alert("Phone must contain only 10 Numbers.")
                return false;
           }
           return true;
        }


        function passid_validation(mx,my){
            var strongPasswordRegex = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{7,}$/;
            var passid = document.getElementById("password").value;

            var passid_len = passid.length;
            if (passid_len == 0 ){
                alert("Password should not be empty");
                //document.registration.passid.focus();
                return false;
            }
            else if(passid_len >= my || passid_len < mx){
                alert("Password Length should be between "+mx+" to "+my);
                //document.registration.passid.focus();
                return false;
            }
            else if(!strongPasswordRegex.test(passid))
            {
                alert("Password not satisfy all the criteria");
                //document.registration.passid.focus();
                return false;
            }
            return true;
        }

        

        function allLetter(){ 
            var uname = document.getElementById("name");

            //var uname = document.getElementById('name').value;
            console.log(uname);

            var letters = /^[a-zA-Z ]*$/;
            if(uname.value.match(letters)){
                return true;
            }
            alert('Username must have alphabet characters only');
           // document.registration.name.focus();
            return false;
        }


        function validateEmail(){
            var uemail = document.getElementById('emailId').value;
            console.log(uemail);
            
            var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if(uemail.match(mailformat)){
                return true;
            }
            alert("You have entered an invalid email address!");
            //document.registration.uemail.focus();
            return false;
        }


        function cpassid_validation(){
            var passid = document.getElementById('password').value;
            var cpassid = document.getElementById('cpassword').value;

            if (passid == cpassid){
                return true
            }
            alert("Password and Confirm Password do not match!");
            return false;
        }

        function formValidation(){
            var uemail = document.getElementById("emailId");
            var uname = document.getElementById("name");
            var passid = document.getElementById("password");
            var cpassid = document.getElementById("cpassword");
            var err_para = document.getElementById("err_para");
            
            if(uemail.value==''||uname.value==''||passid.value==''||cpassid.value==''){	
                alert("You have missed mandatory field(s)");
                return false;
            }
            
            if(allLetter() && validateEmail() && passid_validation(7,12) && cpassid_validation() && phoneNumberCheck()){
                console.log("Insise");
                return true;
            }
            err_para.innerHTML = "Please Fill all the details carefully!!"
            return false;
        }


