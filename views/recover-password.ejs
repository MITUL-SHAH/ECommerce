<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recover Password</title>
</head>
<body>
    <h1>Recover Password</h1>
    <form id="recover_password_form" action="/users/recover-password/update" method="POST">
        New Password: <input type="password" name="password1" id="password1" required>
        <br>
        Confirm Password: <input type="password" name="password2" id="password2" required>
        <br>
        <p id="err_para" style="color: red;"></p>
        <br>
        <input type="hidden" name = "emailId" value= <%= locals.emailId%>>
        <input type="submit" value="Update Password" id="submit_button">
    </form>

    <script>
        const recPasswordForm = document.getElementById("recover_password_form");
        const pass1 = document.getElementById("password1");
        const pass2 = document.getElementById("password2");
        const errPara = document.getElementById("err_para");
        const submitButton = document.getElementById("submit_button");

        recPasswordForm.addEventListener("submit", function (event) {
            if (pass1.value !== pass2.value) {
                event.preventDefault(); // Prevent form submission

                // Display an error message
                errPara.textContent = "Passwords do not match";

                // Disable the submit button
                submitButton.disabled = true;
            }
        });

        // Clear the error message and enable the submit button when inputs change
        pass1.addEventListener("input", function () {
            errPara.textContent = "";
            submitButton.disabled = false; // Re-enable the button
        });

        pass2.addEventListener("input", function () {
            errPara.textContent = "";
            submitButton.disabled = false; // Re-enable the button
        });
    </script>
</body>
</html>