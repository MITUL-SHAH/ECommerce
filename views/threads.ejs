<!DOCTYPE html>
<html>

<head>
    <meta charset="ISO-8859-1">
    <title>Message Thread</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
    <style>
        .messages-container {
            max-width: 600px;
            margin: auto;
            border: 1px solid #ddd;
            padding: 10px;
            height: 400px;
            overflow-y: auto;
            background-color: #f9f9f9;
        }
        .message {
            padding: 5px 10px;
            margin-bottom: 8px;
            border-radius: 5px;
            background-color: #e9e9e9;
        }
        .message:nth-child(odd) {
            text-align: left;
        }
        .message:nth-child(even) {
            text-align: right;
            background-color: #d0e0f0;
        }
    </style>
</head>

<body>
    <%- include('Common/cr_header.ejs') %>
    <div align="center">
        <br>
        <h2 class="text-primary text-left mx-auto">Thread Messages</h2>
        <div id="messagesContainer" class="messages-container">
            <!-- Dynamic message divs will be appended here -->
        </div>
        <br>
    </div>

    
    <div>
        

        <form id="replyForm" >
            <label for="inputField">Reply:</label>
            <input type="text" id="inputField" name="inputField">
            <button type="submit">Submit</button>
        </form>

    </div>
    <script>
        var reqId = '<%= reqId %>';
    
        function fetchThreadMessages(receivedReqId) {
            $.ajax({
                type: "POST",
                url: "/customer_representative/show-all-messeges",
                data: { reqId: receivedReqId },
                success: function(response) {
                    var messagesContainer = $('#messagesContainer');
                    messagesContainer.empty();
                    response.serializedMessages.forEach(function(message) {
                        var messageDiv = '<div class="message">' +
                            '<div>Request ID: ' + message.requestId + '</div>' +
                            '<div>User ID: ' + message.userId + '</div>' +
                            '<div>Customer Rep: ' + message.customerRep + '</div>' +
                            '<div>Listing ID: ' + message.listingId + '</div>' +
                            '<div>Description: ' + message.updateDescription + '</div>' +
                            '<div>Created On: ' + message.createdOn + '</div>' +
                            '<div>Updated By: ' + message.updatedBy + '</div>' +
                            '</div>';
                        messagesContainer.append(messageDiv);
                    });
                },
                error: function(error) {
                    console.error('Error fetching messages:', error);
                }
            });
        }
    
        function insertThreadMessages() {
            var desc = $('#inputField').val();
            var message = {
                reqId: reqId,
                updateDescription: desc
            };
            $.ajax({
                type: "POST",
                url: "/customer_representative/insert-message",
                data: message,
                success: function(response) {
                    console.log('Message sent successfully:', response);
                    fetchThreadMessages(response.reqId);
                },
                error: function(error) {
                    console.error('Error sending message:', error);
                }
            });
        }
    
        $(document).ready(function() {
            fetchThreadMessages(reqId);
    
            $('#replyForm').on('submit', function(e) {
                e.preventDefault(); // Prevent the default form submission behavior
                insertThreadMessages();
            });
        });
    </script>
    
</body>

</html>